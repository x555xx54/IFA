<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kiril.micvol.Main">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASSWORD" />

        <TableRow>

            <Button
                android:id="@+id/btnPass1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickPass"
                android:text=" 1 " />

            <Button
                android:id="@+id/btnPass2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickPass"
                android:text=" 2 " />

            <Button
                android:id="@+id/btnPass3"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickPass"
                android:text=" 3 " />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnPass4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickPass"
                android:text=" 4 " />

            <Button
                android:id="@+id/btnPass5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickPass"
                android:text=" 5 " />

            <Button
                android:id="@+id/btnPass6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickPass"
                android:text=" 6 " />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnPass7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickPass"
                android:text=" 7 " />

            <Button
                android:id="@+id/btnPass8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickPass"
                android:text=" 8 " />

            <Button
                android:id="@+id/btnPass9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickPass"
                android:text=" 9 " />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUARD" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGuardOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickGuard"
            android:text="On" />

        <Button
            android:id="@+id/btnGuardOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickGuard"
            android:text="Off" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATUS" />


        <TextView
            tools:text="Guard ON"
            android:id="@+id/tvGuardStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" />
    </LinearLayout>

</LinearLayout>
